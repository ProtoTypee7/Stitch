@model Wishlist

@{
    ViewData["Title"] = "My Wishlist";
}

<div class="container py-5">
    <h2 class="fw-bold text-center mb-4">MY WISHLIST</h2>

    @if (Model?.WishlistProducts == null || !Model.WishlistProducts.Any())
    {
        <div class="text-center text-muted">
            <p>Your wishlist is empty.</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-dark mt-3">Start Shopping</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
            @foreach (var item in Model.WishlistProducts)
            {
                var product = item.Product;
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm position-relative">
                        <img src="@product.ProductImage" class="card-img-top" style="object-fit: cover; height: 360px;" alt="@product.ProductName" />

                        <form asp-action="RemoveFromWishlist" asp-controller="User" method="post"
                              class="position-absolute top-0 end-0 m-2">
                            <input type="hidden" name="productId" value="@product.ProductId" />
                            <input type="hidden" name="userId" value="@Model.UserId" />
                            <button type="submit" class="btn btn-light rounded-circle p-2 border-0">
                                <i class="bi bi-x-lg text-danger"></i>
                            </button>
                        </form>

                        <div class="card-body">
                            <h6 class="fw-semibold text-dark">@product.ProductName</h6>
                            <p class="text-muted small">@product.ProductDescription</p>
                            <p class="fw-bold">Rs. @product.ProductPrice.ToString("N2")</p>

                            <div class="d-flex gap-2">
                                <a asp-controller="Product" asp-action="Details" asp-route-ProductId="@product.ProductId"
                                   class="btn btn-outline-dark btn-sm w-50">Details</a>
                                <a asp-controller="Product" asp-action="AddToCart" asp-route-ProductId="@product.ProductId"
                                   class="btn btn-dark btn-sm w-50">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
