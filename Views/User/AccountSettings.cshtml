@model P2WebMVC.Models.User
@{
    ViewData["Title"] = "Account Settings";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<section class="container my-5" style="max-width: 800px;">
    <h2 class="fw-bold text-center mb-4">ACCOUNT SETTINGS</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }

    <div class="card border-0 shadow-sm p-4 rounded-3">
        <form asp-action="UpdateAccount" method="post">
            <div class="text-center mb-4">
                <img src="@(Model.ProfilePicUrl ?? "~/assets/default-avatar.png")" alt="Profile Picture"
                    class="rounded-circle shadow-sm" style="width: 120px; height: 120px; object-fit: cover;" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Username</label>
                <input type="text" class="form-control rounded-1" name="Username" value="@Model.Username" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" class="form-control rounded-1" name="Email" value="@Model.Email" required />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Phone</label>
                <input type="text" class="form-control rounded-1" name="Phone" value="@Model.Phone" />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Role</label>
                <input type="text" class="form-control rounded-1" name="Role" value="@Model.Role" disabled />
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Address</label>

                @if (Model.Addresses != null && Model.Addresses.Any())
                {
                    <ul>
                        @foreach (var address in Model.Addresses)
                        {
                            <input @address.City, @address.District />

                        }
                    </ul>
                }
                else
                {
                    <p>No addresses found.</p>
                }

            </div>

            <button type="submit" class="btn btn-dark w-100 py-2 rounded-1 mt-3">UPDATE ACCOUNT</button>
        </form>
    </div>

    <div class="text-center mt-4 text-muted">
        <small>Need help? <a href="#" class="text-dark text-decoration-underline">Contact Support</a></small>
    </div>
</section>