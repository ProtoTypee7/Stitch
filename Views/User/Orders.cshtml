@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container d-flex flex-column align-items-center justify-content-center text-center"
    style="min-height: 90vh;">
    <div class="text-success mb-3">
        <i class="bi bi-bag-check" style="font-size: 5rem;"></i>
    </div>

    <h1 class="fw-bold mb-3">ORDER PLACED!</h1>
    <p class="lead mb-4" style="max-width: 600px;">
        Thank you for your purchase. We've received your order and will send you a confirmation email shortly.
    </p>

    <a asp-controller="Order" asp-action="Recent" class="btn btn-dark px-4 py-2 rounded-1">View My Orders</a>
</div>
