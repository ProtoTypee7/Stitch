@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold display-5">Welcome to the Admin Dashboard</h1>
        <p class="text-muted">Manage your store effortlessly — add, update, or remove products and much more!</p>
    </div>

    <div class="row justify-content-center g-4">
        <!-- Create Product Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-4">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">Add New Product</h5>
                    <p class="card-text text-muted">Upload and publish a new item to your store catalog.</p>
                    <a class="btn btn-outline-primary w-100" asp-controller="Admin" asp-action="CreateProduct">
                        Create Product
                    </a>
                </div>
            </div>
        </div>

        <!-- Manage Products Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-4">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">Manage Products</h5>
                    <p class="card-text text-muted">View, edit, or delete existing products from your inventory.</p>
                    <a asp-controller="Admin" asp-action="ManageProducts" class="btn btn-dark w-100">
                        Manage Products
                    </a>
                </div>
            </div>
        </div>

        <!-- View Orders Card -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-4">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">View All Orders</h5>
                    <p class="card-text text-muted">Track all customer purchases and delivery statuses.</p>
                    <a asp-controller="Admin" asp-action="AllOrders" class="btn btn-outline-dark w-100">
                        View Orders
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100 text-center p-4">
                <div class="card-body">
                    <h5 class="card-title fw-semibold">All Users</h5>
                    <p class="card-text text-muted">View all customers and store keepers registered in the system.</p>
                    <a asp-controller="Admin" asp-action="AllUsers" class="btn btn-outline-secondary w-100">View
                        Users</a>
                </div>
            </div>
        </div>

    </div>
</div>
