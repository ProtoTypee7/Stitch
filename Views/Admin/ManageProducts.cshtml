@model IEnumerable<P2WebMVC.Models.DomainModels.Product>
@{
    ViewData["Title"] = "Manage Products";
}

<div class="container py-4">
    <h2 class="mb-4 fw-bold">Manage Products</h2>
    <a asp-controller="Admin" asp-action="Dashboard" class="text-decoration-underline text-muted mb-3 d-block">
        ‚Üê Back to Dashboard
    </a>


    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>


            @foreach (var product in Model)
            {
                <tr>

                    <td style="width: 80px;">
                        <img src="@product.ProductImage" class="img-fluid rounded"
                            style="height: 60px; object-fit: cover;" />
                    </td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductPrice INR</td>
                    <td>@product.ProductStock</td>
                    <td>
                        <a asp-action="EditProduct" asp-route-id="@product.ProductId"
                            class="btn btn-sm btn-outline-primary">Edit</a>
                        <a asp-action="DeleteProduct" asp-route-id="@product.ProductId"
                            class="btn btn-sm btn-outline-danger ms-2">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
